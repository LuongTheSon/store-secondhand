{
  "name": "store-secondhand",
  "version": "1.0.0",
  "description": "Second-hand shoes e-commerce platform built with React, Vite, and SCSS",
  "author": "Luong The Son",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "json-server --watch db.json --port 3001",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\" --names \"API,APP\" --prefix-colors \"blue,green\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/ --ext .jsx",
    "lint:fix": "eslint src/ --ext .jsx --fix",
    "format": "prettier --write \"src/**/*.{jsx,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{jsx,scss,json}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.0.2",
    "react-scroll": "^1.9.0",
    "react-toastify": "^10.0.6",
    "swiper": "^11.1.15",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "json-server": "^1.0.0-beta.3",
    "postcss": "^8.4.49",
    "postcss-cachebuster": "^0.1.6",
    "postcss-cli": "^11.0.0",
    "postcss-csso": "^6.0.1",
    "postcss-custom-media": "^11.0.5",
    "postcss-functions": "^4.0.2",
    "postcss-hexrgba": "^2.1.0",
    "postcss-import": "^16.1.0",
    "postcss-momentum-scrolling": "^3.14.22",
    "postcss-nested": "^7.0.2",
    "postcss-percentage": "^0.0.0",
    "postcss-reporter": "^7.1.0",
    "postcss-will-change-transition": "^1.2.0",
    "prettier": "^3.8.0",
    "sass": "^1.82.0",
    "vite": "^4.2.0"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100,
    "trailingComma": "none"
  }
}
